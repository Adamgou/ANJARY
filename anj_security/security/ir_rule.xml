<?xml version="1.0" encoding="UTF-8"?>

<odoo>
  <record id="pos_config_user_rule" model="ir.rule">
    <field name="name">pos.config.user.role</field>
    <field name="model_id" ref="model_pos_config" />
    <field name="domain_force">['|', ('unauthorized_user_ids', '=', False),
      ('unauthorized_user_ids', 'not in', user.ids)]</field>
    <field name="perm_read" eval="True" />
  </record>
  <record id="pos_session_user_rule" model="ir.rule">
    <field name="name">pos.session.user.role</field>
    <field name="model_id" ref="point_of_sale.model_pos_session" />
    <field name="domain_force">['|', ('config_id.unauthorized_user_ids', '=', False),
      ('config_id.unauthorized_user_ids', 'not in', user.ids)]</field>
    <field name="perm_read" eval="True" />
  </record>
</odoo>
