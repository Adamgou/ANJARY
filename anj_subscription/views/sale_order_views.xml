<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="sale_subscripiton_plan_form_view_inherit" model="ir.ui.view">
            <field name="name">sale.subscription.plan.form.inherit.pos</field>
            <field name="model">sale.subscription.plan</field>
            <field name="inherit_id" ref="sale_subscription.sale_subscription_plan_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_closable']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="make_invisible" model="res.groups">
            <field name="name">Invisible</field>
        </record>
        <record model="ir.ui.menu" id="account.menu_finance_payables">
            <field name="groups_id" eval="[(6,0,[ref('make_invisible')])]" />
        </record>

    </data>

</odoo>