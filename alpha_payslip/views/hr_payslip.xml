<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_payslip_view_form_inherit_alpha" model="ir.ui.view">
            <field name="name">Alpha Inherit Payslip</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form" />
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payslip_run_id']" position="after">
                    <field name="commentaire" />
                    <field name="paid_date" />
                </xpath>
                <xpath expr="//notebook/page[@name='salary_computation']/field/tree/field[@name='rate']" position="after">
                    <field name="nombre" />
                    <field name="base" />
                </xpath>
                <xpath expr="//notebook/page[@name='salary_computation']/field[@name='line_ids']/tree/field[@name='quantity']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//notebook/page[@name='salary_computation']/field[@name='line_ids']/tree/field[@name='rate']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>