<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="res_config_settings_view_form" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.inherit.mrp</field>
      <field name="model">res.config.settings</field>
      <field name="priority" eval="35"/>
      <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//setting[@id='mrp_lock']" position="before">
          <div class="col-12 col-lg-6 o_setting_box" id="po_order_approval">
            <div class="o_setting_left_pane">
            </div>
            <div class="o_setting_right_pane">
              <label for="number_of_mo"/>
              <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                    aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
              <div class="text-muted">
                Number of production orders to be taken into account when calculating the average of BOM components
              </div>
              <div class="content-group">
                <div class="row mt16">
                  <span class="col-lg-4 o_light_label">Value : </span>
                  <field name="number_of_mo"/>
                </div>
              </div>
            </div>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>