<odoo>
    <data>
        <!-- Add Payment button on the payslip run form. -->
    <record id="hr_payslip_run_view_form" model="ir.ui.view">
        <field name="name">hr.payslip.run.inherit.form</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
        <field name="arch" type="xml">
            <button name="action_draft" position="after">
                <button name="action_generate_opavie_report" type="object" string="Create OPAVI Report" class="oe_highlight" attrs="{'invisible': [('state', 'not in', ['close', 'verify', 'paid'])]}"/>
            </button>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="employer_bank_account"/>
            </xpath>
        </field>
    </record>
    </data>
</odoo>