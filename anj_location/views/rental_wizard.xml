<odoo>
    <data>
        <record id="inherited_rental_wizard" model="ir.ui.view">
            <field name="name">rental wizard inherited</field>
            <field name="model">rental.wizard</field>
            <field name="inherit_id" ref="sale_renting.rental_configurator_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='rental_pricing']" position="after">
                    <group name="price_location">
<!--                        <label for="location_price_id" class="oe_edit_only" />-->
                        <field name="location_price_id"/>
                        <field name="location_price" widget='monetary'/>
                    </group>

                </xpath>
            </field>
        </record>
    </data>
</odoo>