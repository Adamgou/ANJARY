<odoo>
    <data>
        <record id="inherited_res_partner_view_form" model="ir.ui.view">
            <field name="name">inherited.res_partner.form.inherit.test</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- find field description and add the field
                     new_field after it -->
                <xpath expr="//field[@name='city']" position="replace">
                    <field name="city" placeholder="City" class="o_address_city"
                           readonly="type == 'contact' and parent_id" invisible="1"/>
                    <field name="city_id" placeholder="Ville" class="o_address_city"
                           readonly="type == 'contact' and parent_id"/>
                </xpath>
                 <xpath expr="//field[@name='function']" position="after">
                    <field name="nickname" />
                </xpath>
                <!--<xpath expr="//field[@name='category_id']" position="after">
                    <field name="employee_id" />
                </xpath> -->

                <xpath expr="//notebook" position="inside">
                    <page name="additif_info_partner" string="Infos additionnel">
                        <div>
                            <group>
                                <group name="order_transfert" string="Informations complÃ©mentaire">
                                    <field name="driver_id" />
                                    <field name="product_id" />
                                    <field name="best_room" />
                                </group>
                            </group>
                        </div>
                    </page>
                </xpath>
                <xpath expr="//div[@class='o_address_format'][1]" position="after">
                    <field name="chatId" />
                    <field name="nif" />
                    <field name="stat" />
                    <field name="rcs" />
                    <field name="customer_codes" string="Code client"/>
                  </xpath>
                <xpath expr="//field[@name='vat']" position="replace">
                  <field name="vat" placeholder="e.g. BE0477472701" readonly="parent_id" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="inherit_view_partner_base_vat_form" model="ir.ui.view">
            <field name="name">res.partner.base.vat.view.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base_vat.view_partner_base_vat_form"/>
            <field name="priority">60</field>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='vat']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>