<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.rule" id="subscription_template_user_restrict">
        <field name="name">Restrict subscription template for certain users</field>
        <field name="model_id" ref="sale_subscription.model_sale_order_template" />
        <field name="domain_force">['|', ('user_ids','=', False), ('user_ids','in', user.id)]</field>
    </record>
    <record model="ir.rule" id="sale_subscription_user_restrict">
        <field name="name">Restrict sale subscription for certain users</field>
        <field name="model_id" ref="sale_subscription.model_sale_order" />
        <field name="domain_force">['|', ('sale_order_template_id','=', False),
            '|', ('sale_order_template_id.user_ids', '=', False),
            ('sale_order_template_id.user_ids','in', user.id)]</field>
    </record>
</odoo>