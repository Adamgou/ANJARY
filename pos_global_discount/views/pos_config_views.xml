<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form_inherit_pos_discount" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.pos.discount</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <setting id="other_devices" position="before">
                <field name="module_pos_discount" invisible="1"/>
                <setting id="discount" string="Global discount">
                    <div class="row mt16">
                        <label string="Discount Product" for="discount_product_id"
                            class="col-lg-3 o_light_label" />
                        <field name="discount_product_id"
                            required="module_pos_discount" />
                    </div>
                    <div class="row">
                        <label string="Discount Type" for="global_discount_type"
                            class="col-lg-3 o_light_label" />
                        <field name="global_discount_type"
                            required="module_pos_discount" />
                    </div>
                    <div class="row">
                        <label string="Discount Percentage/Amount" for="discount_pc"
                            class="col-lg-3 o_light_label" />
                        <field name="discount_pc" />
                    </div>
                </setting>
            </setting>
        </field>
    </record>
</odoo>