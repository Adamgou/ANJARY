<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_anj_bis" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.anj.bis</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_payment_section']" position="after">
	            <block name="config_info" id="config_info">
		              <group>
				            <field name="config_logo" widget="image"/>
	                  <field name="config_info"/>
	                  <field name="config_phone"/>
	                  <field name="config_address"/>
			            </group>
	            </block>
            </xpath>
        </field>
    </record>
</odoo>
