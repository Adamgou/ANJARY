            <xpath expr="//div[@name='div_incoming_address']" position="replace">
                <div class="col-7"></div>
            </xpath>

            <xpath expr="//div[hasclass('page')]/h2[1]" position="replace">
                <t t-if="not o.company_id.name.lower() == 'jara distribution'">
                    <div></div>
                    <h6 style="border: 3px solid black; margin-top: 15px; width: 50%; padding: 10px; font-size: 14px">BON DE LIVRAISON N°: <span t-field="o.name"/>
                    </h6>
                </t>
            </xpath>

            <xpath expr="//div[@name='div_origin']" position="replace">
                <div name="div_origin" class="col-auto"></div>
            </xpath>
            
            <xpath expr="//div[@class='row mt32 mb32']" position="attributes">
                <attribute name="class" separator=" " remove="mt32"></attribute>
                <attribute name="class" separator=" " remove="mb32"></attribute>
                <attribute name="class" separator=" " add="mb-2"></attribute>
            </xpath>
            <xpath expr="//div[@name='div_sched_date']" position="replace">
                <t t-if="o.company_id.name.lower() == 'jara distribution'">
                    <div t-if="o.state" name="div_sched_date" style="margin-top: -3rem !important; font-size: 14px;">
                        <t t-if="o.state == 'done'">
                            <p>Date de livraison: <span t-field="o.date_done" t-options="{'widget': 'date'}"/>
                            </p>
                        </t>
                        <t t-if="o.state != 'done'">
                            <p>Date de livraison: <span t-field="o.scheduled_date" t-options="{'widget': 'date'}"/>
                            </p>
                        </t>
                    </div>
                </t>
                <t t-else="">
                    <div t-if="o.state" name="div_sched_date" style="margin-top: 0px !important; font-size: 14px;">
                        <t t-if="o.state == 'done'">
                            <p>Date de livraison: <span t-field="o.date_done" t-options="{'widget': 'date'}"/>
                            </p>
                        </t>
                        <t t-if="o.state != 'done'">
                            <p>Date de livraison: <span t-field="o.scheduled_date" t-options="{'widget': 'date'}"/>
                            </p>
                        </t>
                    </div>
                </t>
                
            </xpath>

            <xpath expr="//table[@name='stock_move_table']" position="replace">
                <t t-if="not o.company_id.name.lower().startswith('mada blocks')">
                    <t t-set="total" t-value="0"/>
                    <table class="table table-sm" style="border: 1px solid black;">
                        <thead>
                            <tr style="font-size: 14px;">
                                <th name="th_sm_product" class="text-center" style="border: 1px solid black;">Ref</th>
                                <th name="th_sm_ordered" class="text-center" style="border: 1px solid black;">Désignation</th>
                                <th name="th_sm_quantity" class="text-center" style="border: 1px solid black;">Qté</th>
                                <th name="th_sm_quantity" class="text-center" style="border: 1px solid black;">PU</th>
                                <th name="th_sm_quantity" class="text-center" style="border: 1px solid black;">Rem(%)</th>
                                <th name="th_sm_quantity" class="text-center" style="border: 1px solid black;">PU NET</th>
                                <th name="th_sm_quantity" class="text-center" style="border: 1px solid black;">Montant</th>
                            </tr>
                        </thead>
                        <tbody style="font-size: 13px;">
                            <t t-set="lines" t-value="o.move_ids.filtered(lambda x: x.product_uom_qty and x.sale_line_id)"/>
                            <tr t-foreach="lines" t-as="move" style="border: 1px solid black;">
                                <td style="text-align: center;border: 1px solid black;">
                                    <span t-field="move.product_id.default_code"/>
                                </td>
                                <td style="border: 1px solid black;">
                                    <span t-field="move.product_id.name"/>
                                </td>
                                <td style="border: 1px solid black;">
                                    <span t-field="move.quantity"/>
                                    <span t-field="move.product_uom"/>
                                </td>
                                <td style="text-align: right;border: 1px solid black;">
                                    <span t-field="move.sale_line_id.price_unit"/>
                                </td>
                                <td style="text-align: center;border: 1px solid black;">
                                    <span t-field="move.sale_line_id.discount"/>
                                </td>
                                <td style="text-align: center;border: 1px solid black;">
                                    <span t-field="move.sale_line_id.unit_price_discounted"/>
                                </td>
                                <td style="text-align: right;border: 1px solid black;">
                                    <span t-field="move.sale_line_id.price_subtotal"/>
                                    <t t-set="total" t-value="total+move.sale_line_id.price_subtotal"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="clearfix">
                        <div id="total" class="row" name="total" style="font-size: 12px;">
                            <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                <table class="table table-sm" style="border: 1px solid black;">
                                    <tr style="border: 1px solid black;">
                                        <td style="border: 1px solid black;">TOTAL</td>
                                        <td style="background-color: none; text-align: left;border: 1px solid black;">
                                            <t t-esc="total" t-options="{'widget': 'float', 'precision': 2}"/>
                                        </td>
                                    </tr>
                                    <tr style="background-color: none; text-align: left;border: 1px solid black;">
                                        <td style="border: 1px solid black;">Net à payer Ar</td>
                                        <td style="border: 1px solid black;">
                                            <t t-esc="total" t-options="{'widget': 'float', 'precision': 2}"/>
                                        </td>
                                    </tr>
                                    <tr style="background-color: none; text-align: left;border: 1px solid black;">
                                        <td style="border: 1px solid black;">Net à payer Fmg</td>
                                        <td style="border: 1px solid black;">
                                            <t t-esc="total * 5" t-options="{'widget': 'float', 'precision': 2}"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="row" name="date_due" style="font-size: 13px;">
                            <p>Date d'échéance : <span t-field="o.picking_date_due" t-options="{'widget': 'date'}"/><br/>
                                Moyens de paiement : <span t-field="o.sale_id.means_of_payment"/></p>
                        </div>
                    </div>
                </t>
                <t t-elif="o.company_id.name.lower().startswith('mada blocks') and o.state != 'done'">
                    <t t-set="total" t-value="0"/>
                    <table class="table table-sm" style="border: 1px solid black;font-size: 14px;">
                        <thead>
                            <tr>
                                <th name="th_sm_product" class="text-center" style="border: 1px solid black;">Ref</th>
                                <th name="th_sm_ordered" class="text-center" style="border: 1px solid black;">Désignation</th>
                                <th name="th_sm_quantity" class="text-center" style="border: 1px solid black;">Qté</th>
                                <th name="th_sm_quantity" class="text-center" style="border: 1px solid black;">PU</th>
                                <th name="th_sm_quantity" class="text-center" style="border: 1px solid black;">Rem(%)</th>
                                <th name="th_sm_quantity" class="text-center" style="border: 1px solid black;">PU NET</th>
                                <th name="th_sm_quantity" class="text-center" style="border: 1px solid black;">Montant</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="lines" t-value="o.move_ids.filtered(lambda x: x.product_uom_qty and x.sale_line_id)"/>
                            <tr t-foreach="lines" t-as="move" style="border: 1px solid black;">
                                <td style="text-align: center;border: 1px solid black;">
                                    <span t-field="move.product_id.default_code"/>
                                </td>
                                <td style="border: 1px solid black;">
                                    <span t-field="move.product_id.name"/>
                                </td>
                                <td style="border: 1px solid black;">
                                    <span t-field="move.quantity"/>
                                    <span t-field="move.product_uom"/>
                                </td>
                                <td style="text-align: right;border: 1px solid black;">
                                    <span t-field="move.sale_line_id.price_unit"/>
                                </td>
                                <td style="text-align: center;border: 1px solid black;">
                                    <span t-field="move.sale_line_id.discount"/>
                                </td>
                                <td style="text-align: center;border: 1px solid black;">
                                    <span t-field="move.sale_line_id.unit_price_discounted"/>
                                </td>
                                <td style="text-align: right;border: 1px solid black;">
                                    <span t-field="move.sale_line_id.price_subtotal"/>
                                    <t t-set="total" t-value="total+move.sale_line_id.price_subtotal"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="clearfix">
                        <div id="total" class="row" name="total">
                            <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                <table class="table table-sm" style="border: 1px solid black;font-size: 13px;">
                                    <tr style="border: 1px solid black;">
                                        <td style="border: 1px solid black;">TOTAL</td>
                                        <td style="background-color: none; text-align: left;border: 1px solid black;">
                                            <t t-esc="total" t-options="{'widget': 'float', 'precision': 2}"/>
                                        </td>
                                    </tr>
                                    <tr style="background-color: none; text-align: left;border: 1px solid black;">
                                        <td style="border: 1px solid black;">Net à payer Ar</td>
                                        <td style="border: 1px solid black;">
                                            <t t-esc="total" t-options="{'widget': 'float', 'precision': 2}"/>
                                        </td>
                                    </tr>
                                    <tr style="background-color: none; text-align: left;border: 1px solid black;">
                                        <td style="border: 1px solid black;">Net à payer Fmg</td>
                                        <td style="border: 1px solid black;">
                                            <t t-esc="total * 5" t-options="{'widget': 'float', 'precision': 2}"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="row" name="date_due">
                            <p>Date d'échéance : <span t-field="o.picking_date_due" t-options="{'widget': 'date'}"/><br/>Moyens de paiement : <span t-field="o.sale_id.means_of_payment"/></p>
                        </div>
                    </div>
                </t>
            </xpath>

            <xpath expr="//div[hasclass('page')]" position="inside">
                <t t-if="o.company_id.name in ('JARA DISTRIBUTION','JARA TRADE')">
                    <div id="signature" class="row mt32 mb32" style="text-align:center; margin-top: 100px">
                        <div class="col-auto col-3 mw-100 mb-2" name="responsable">
                            <span>Signature Responsable</span>
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2" name="chauffeur">
                            <span>Signature Chauffeur</span>

                        </div>
                        <div class="col-auto col-3 mw-100 mb-2" name="client">
                            <span>Signature Client</span>
                        </div>
                    </div>
                </t>
            </xpath>

        </template>

        <template id="external_layout_standard_inherit" inherit_id="web.external_layout_standard">
            <xpath expr="//div[@t-att-style='report_header_style']" position="replace">
                <t t-if="company.name.lower() == 'jaratrade'">
                    <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                        
                    </div>
                </t>
                <t t-if="company.name.lower() == 'jara distribution'">
                    <div t-attf-class="header o_company_#{company.id}_layout" >
                        <div class="row">
                            
                        </div>
                    </div>
                </t>
                <t t-else="else">
                    <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                        <div class="row">
                            <div class="col-3 mb4">
                                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;" alt="Logo"/>
                            </div>
                            <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
                        </div>
                        <div t-if="company.logo or company.report_header" class="row zero_min_height">
                            <div class="col-12">
                                <div style="border-bottom: 1px solid black;"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6" name="company_address">
                                <span t-if="company.company_details" t-field="company.company_details"></span>
                            </div>
                        </div>
                    </div>
                </t>
            </xpath>


        </template>

    </data>

</odoo>