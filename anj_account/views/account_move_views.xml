<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="anj_account_move_view_form_inherit" model="ir.ui.view">
            <field name="name">anj.account.move.view.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <field name="payment_reference" position="before">
                    <!--<field name="partner_sequence"/>-->
                    <field name="partner_codes" string="Code client"/>
                    <field name="compute_field_reset_draft" invisible="1"/>
                </field>
                <xpath expr="//button[@name='action_register_payment']" position="attributes">
                    <attribute name="groups">anj_account.group_paiement_validation</attribute>

                </xpath>
                <xpath expr="//button[@name='button_draft']" position="attributes">
                    <attribute name="attrs">{'invisible': [('compute_field_reset_draft', '=', False)]}</attribute>
                </xpath>
            </field>
        </record>

        <record id="account_view_out_invoice_tree_inherit" model="ir.ui.view">
            <field name="name">account.view.out.invoice.tree.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <field name="invoice_date_due" position="before">
                    <field name="period"/>
                </field>
                <field name="amount_total_in_currency_signed" position="attributes">
                    <attribute name="sum">Total</attribute>
                </field>
            </field>
        </record>

        
    </data>
</odoo>