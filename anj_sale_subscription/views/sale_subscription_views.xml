<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_subscription_view_kanban_inherit" model="ir.ui.view">
        <field name="name">sale.subscription.view.kanban.inherit.anj_sale_subscription</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_view_kanban" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_kanban_record_body')]" position="inside">
                <field name="product_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>

    <record id="sale_subscription_view_form" model="ir.ui.view">
        <field name="name">sale.subscription.form.view.inherit.anj_sale_subscription</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_primary_form_view" />
        <field name="arch" type="xml">
            <field name="sale_order_template_id" position="after">
                <field name="can_read_move" invisible="1" />
                <field name="is_monthly" invisible="1" />
                <field name="prorata" readonly="can_read_move == True and invoice_count &gt;0"
                    invisible="can_read_move == False or is_monthly == False" />
            </field>
        </field>
    </record>

</odoo>