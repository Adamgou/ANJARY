<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="hr_payslip_view_form" model="ir.ui.view">
        <field name="name">hr.payslip.view.form.inherit.anj_payroll</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <field name="paid_date" position="before">
                <field name="payment_mode_id" placeholder="Payment mode..."/>
            </field>
            <field name="quantity" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>
            <field name="rate" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>
            <xpath expr="//field[@name='struct_id']" position="after">
                    <field name="is_can_modif_all_balance" invisible="1"/>
                </xpath>
            <xpath expr="//sheet/group[1]" position="after">
                    <group string="Situation des congés payés" col="12">
                        <button string="RAFRAÎCHIR"
                            type="object" name="refresh_payslip_leave_situation" class="btn-primary"/>
                        <label for="previous_paid_leave_balance" string="Solde antérieur"/>
                        <field name="previous_paid_leave_balance" readonly="is_can_modif_all_balance != True" nolabel="1"/>
                        <label for="gain_on_current_month" string="Gain sur le mois actuel"/>
                        <field name="gain_on_current_month" nolabel="1"/>
                        <label for="days_taken_in_the_month" string="Jours pris dans le mois"/>
                        <field name="days_taken_in_the_month" readonly="1" nolabel="1"/>
                        <label for="new_balance_in_the_month" string="Nouveau solde"/>
                        <field name="new_balance_in_the_month" readonly="1" nolabel="1"/>
                    </group>
                </xpath>
        </field>
    </record>
</odoo>