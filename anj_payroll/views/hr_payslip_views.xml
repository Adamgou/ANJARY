<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="hr_payslip_view_form" model="ir.ui.view">
        <field name="name">hr.payslip.view.form.inherit.anj_payroll</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <field name="paid_date" position="before">
                <field name="payment_mode_id" placeholder="Payment mode..."/>
            </field>
            <field name="quantity" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>
            <field name="rate" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>
        </field>
    </record>
</odoo>